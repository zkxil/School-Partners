{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "react/jsx-runtime"
    ],
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "lib",
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "webpack"
    ],
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts",
      "src"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src"
  ], // üëà ÊòæÂºèÂ£∞Êòé
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}